<% content_for :title, "番組制作招待" %>

<div class="container py-5">
  <%= render 'shared/flash_message' %>
  <div class="glass-morphism p-5 text-center">
    <h2 class="display-5 fw-bold text-gradient mb-4">
      <i class="bi bi-broadcast me-3"></i>
      <%= @program.title %>
    </h2>
    
    <h3 class="h4 text-gradient-subtle mb-5">この番組への招待リンクを生成しますか？</h3>
    
    <%= button_to program_invitations_path, 
        class: "btn btn-primary btn-lg rounded-pill px-4 py-3 hover-lift" do %>
      <i class="bi bi-link-45deg me-2"></i>
      招待リンクを生成する
    <% end %>
    
    <div class="mt-5">
      <%= link_to 'javascript:history.back()', class: "btn btn-outline-light rounded-pill px-4 hover-lift" do %>
        <i class="bi bi-arrow-left me-2"></i>
        戻る
      <% end %>
    </div>
  </div>
</div>