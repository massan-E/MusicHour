<%= turbo_frame_tag "letter_modal" do %>
  <div class="position-fixed top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-75 z-3" data-controller="letter_modal" data-letter_modal-target="backGround" data-action="click->letter_modal#closeBackground">
    <div class="modal-dialog modal-lg" role="document" data-letter_modal-target="letterModal">
      <div class="modal-content glass-morphism rounded-4 shadow-lg border-0">
        <div class="modal-header border-0 px-4 pt-4">
          <% if letter.errors.any? %>
            <h5 class="modal-title text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i>入力内容にエラーがあります</h5>
          <% else %>
            <h5 class="modal-title text-gradient fw-bold">以下の内容で送信しますか？</h5>
          <% end %>
          <button class="btn-close btn-close-white" data-action="click->letter_modal#closeModal" aria-label="Close"></button>
        </div>

        <div class="modal-body p-4">
          <% if letter.errors.any? %>
            <div class="alert alert-danger d-flex align-items-center mb-4">
              <ul class="mb-0 ps-3">
                <% letter.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <p class="fw-bold text-gradient-subtle mb-1">お便り箱</p>
            <p class="mb-0 ps-3"><%= letter&.letterbox&.title %></p>
          </div>
          <div class="mb-3">
            <p class="fw-bold text-gradient-subtle mb-1">ラジオネーム</p>
            <p class="mb-0 ps-3"><%= letter&.radio_name %></p>
          </div>
          <div>
            <p class="fw-bold text-gradient-subtle mb-1">本文</p>
            <div class="text-truncate-container p-3 rounded-3" style="background: rgba(0,0,0,0.2);">
              <%= markdown(letter&.body) %>
            </div>
          </div>
        </div>

        <div class="modal-footer border-0 p-4">
          <div class="d-flex justify-content-end gap-2 w-100">
            <% unless letter.errors.any? %>
              <%= button_to "送信する",
                  program_letters_path,
                  method: :post,
                  params: { letter: letter_params },
                  class: "btn btn-primary fw-bold",
                  data: { turbo: false } %>
            <% end %>
            <button type="button" class="btn btn-outline-light fw-bold" data-action="click->letter_modal#closeModal">
              キャンセル
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
