<div id="<%= dom_id letter %>" class="glass-morphism p-4 mb-4">
  <div class="letter-content">
    <div class="d-flex align-items-center mb-3">
      <i class="bi bi-person-circle fs-4 me-3 text-gradient"></i>
      <h2 class="h5 mb-0 text-gradient"><%= letter.radio_name %></h2>
    </div>
    
    <div class="letter-body p-3 rounded" style="background: rgba(26, 27, 38, 0.3);">
      <p class="mb-0 card-text"><%= letter.body %></p>
    </div>
    
    <div class="mt-3 text-muted small">
      <i class="bi bi-clock me-2"></i>
      <%= letter.created_at.strftime("%Y-%m-%d %H:%M") %>
    </div>
  </div>
</div>