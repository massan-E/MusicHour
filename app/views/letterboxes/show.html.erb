<p style="color: green"><%= notice %></p>

<h4><%= link_to "番組：#{@letterbox.program.title}", @letterbox.program %></h4>
<h1>Title:<%= @letterbox.title %></h1>
<br>
<h2>Body:<br><%= @letterbox.body %></h2>
<br>
<div>
  <%= link_to 'お便りはこちらから =>', program_path(@letterbox.program, letter:{letterbox_id: @letterbox.id})%>
  <br>
  <br>
  <p><%= link_to "Back to letterboxes", program_path(@letterbox.program) %></p>

  <% if current_user %>
    <% if producer?(current_user, @letterbox.program) || current_user.admin %>
      <p><%= link_to "Edit this letterbox", edit_letterbox_path(@letterbox) %></p>
      <%= button_to "Destroy this letterbox", @letterbox, method: :delete %>
    <% end %>
  <% end %>
</div>
