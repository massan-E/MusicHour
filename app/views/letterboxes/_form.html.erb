<%= form_with model: letterbox, url: letterbox_action_path(program,letterbox), class: "card glass-morphism p-4" do |form| %>
  <% if letterbox.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(letterbox.errors.count, "error") %> prohibited this letterbox from being saved:</h5>
      <ul class="mb-0">
        <% letterbox.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "form-label card-text" %>
    <%= form.text_field :title, class: "form-control", placeholder: "お便り箱のタイトルを入力" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "form-label card-text" %>
    <%= form.text_area :body, class: "form-control glass-input", rows: 5 %>
  </div>

  <div class="mb-4">
    <%= form.label :publish, class: "form-label card-text" %>
    <%= form.check_box :publish, class: "form-check-input" %>
  </div>

  <div class="mb-4">
    <%= form.label :letters_visible, class: "form-label card-text" %>
    <%= form.check_box :letters_visible, class: "form-check-input" %>
  </div>

  <div class="text-end mt-4">
    <%= form.submit class: "btn btn-primary rounded-pill px-4 hover-lift" %>
  </div>
<% end %>