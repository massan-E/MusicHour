<% content_for :title, "お便り箱の編集" %>

<div class="container py-5">
  <%= render 'shared/flash_message' %>
  <div class="glass-morphism p-5">
    <h2 class="display-6 fw-bold text-gradient mb-4">
      <i class="bi bi-mailbox me-3"></i>
      お便り箱の編集
    </h2>
    
    <%= render "form", program: @program, letterbox: @letterbox %>
  </div>
  <%= link_to 'javascript:history.back()', class: "btn btn-outline-light rounded-pill px-4 hover-lift" do %>
        <i class="bi bi-arrow-left me-2"></i>
        戻る
  <% end %>
</div>