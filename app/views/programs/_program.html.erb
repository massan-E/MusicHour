<div id="<%= dom_id program %>" class="col-md-6 col-lg-4">
  <div class="card glass-morphism h-100 border-0 hover-lift">
    <div class="card-body p-4">
      <div class="d-flex align-items-center mb-3">
        <div class="program-icon me-3">
          <i class="bi bi-broadcast fs-4 text-gradient"></i>
        </div>
        <h4 class="card-title mb-0">
          <%= link_to program.title, program, 
              class: "text-decoration-none text-gradient fw-bold" %>
        </h4>
      </div>
      
      <p class="card-text mb-4">
        <%= program.body %>
      </p>

      <div class="program-meta mb-3">
        <% if producer?(current_user, program) || current_user&.admin? %>
          <%= link_to new_program_invitation_path(program), 
              class: "btn btn-outline-light btn-sm rounded-pill hover-lift mb-3" do %>
            <i class="bi bi-person-plus me-2"></i>
            ユーザーを招待する
          <% end %>
        <% end %>
        <br>
        <div class="text-white-50 small">
          <i class="bi bi-clock me-2"></i>
          <%= program.created_at.strftime("%Y-%m-%d") %>
          <%= link_to program.user, 
            class: "text-decoration-none d-inline-flex align-items-center me-3" do %>
          <i class="bi bi-person-circle me-2"></i>
          <span class="text-gradient-subtle"><%= program.user.name %></span>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>