<h1>login</h1>
<p>Find me in app/views/user_sessions/new.html.erb</p>

<%= form_with(url: login_path, scope: :session) do |form| %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :passowrd, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <%= form.label :remember_me, class: "checkbox inline" do %>
    <%= form.check_box :remember_me %>
    <span>ログイン状態を保持する</span>
  <% end %>

  <div>
    <%= form.submit "log in" %>
  </div>
<% end %>