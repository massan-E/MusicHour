    <ul>
      <li><%= link_to "TOP", root_path %></li>
      <% if current_user %>
        <li><%= link_to current_user.name, current_user %></li>
        <li><%= link_to "Log out" , logout_path ,data: { "turbo-method": :delete} %></li>
      <% else %>
        <li>loving rabbit</li>
        <li><%= link_to "Log in", login_path %></li>
        <li><%= link_to "ユーザー登録", new_user_path %></li>
      <% end %>
    </ul>
  </div>
</header>