<header class="<%="#{controller_name}-#{action_name}"%> glass header-index py-3">
  <div class="container">
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <!-- On Air ロゴと TOP リンク -->
        <div class="d-flex align-items-center">
          <div class="me-4">
            <svg width="140" height="46" viewBox="0 0 140 46" xmlns="http://www.w3.org/2000/svg">
              <rect x="5" y="5" width="130" height="36" rx="18" fill="rgba(26, 27, 38, 0.9)" />
              <text x="15" y="30" fill="#c0caf5" font-family="Arial" font-weight="bold" font-size="20">ON AIR</text>
              <circle cx="110" cy="23" r="8" fill="#ff5555" class="pulse-animation">
                <animate attributeName="opacity" values="1;0.3;1" dur="2s" repeatCount="indefinite"/>
              </circle>
              <path d="M 110 15
                      A 8 8 0 0 1 110 31"
                    stroke="#7aa2f7"
                    fill="none"
                    stroke-width="2"
                    class="wave-animation">
                <animate attributeName="d"
                        values="M 110 15 A 8 8 0 0 1 110 31;M 110 13 A 10 10 0 0 1 110 33;M 110 15 A 8 8 0 0 1 110 31" 
                        dur="1.5s"
                        repeatCount="indefinite"/>
              </path>
            </svg>
          </div>
          <%= link_to "TOP", root_path, class: "top-nav-link nav-hover text-gradient fs-4 me-4 d-none d-lg-block" %>
        </div>

        <!-- ハンバーガーメニュートグルボタン -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- ナビゲーションメニュー -->
        <div class="collapse navbar-collapse" id="navbarMenu">
          <ul class="navbar-nav w-100 justify-content-end nav-links mb-0">
            <li class="nav-item"><span class="text-gradient fs-5"><%= header_user_name %></span></li>
            <li class="nav-item d-lg-none">
              <%= link_to "TOP", root_path, class: "nav-link nav-hover text-gradient fs-4" %>
            </li>
            <% if current_user %>
              <li class="nav-item"><%= link_to "My page", current_user, class: "nav-link nav-hover fs-5" %></li>
              <li class="nav-item"><%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "nav-link nav-hover fs-5" %></li>
            <% else %>
              <li class="nav-item"><%= link_to "Log in", new_user_session_path, class: "nav-link nav-hover fs-5" %></li>
              <li class="nav-item"><%= link_to "ユーザー登録", new_user_registration_path, class: "btn btn-primary btn-lg rounded-pill px-4 hover-lift" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>