<div class="card glass-morphism mb-3 h-100 border-0 hover-lift d-flex flex-column">
  <%= link_to user, class: "text-decoration-none", data: { turbo: false } do %>
    <div id="<%= dom_id user %>" class="p-4">
      <div class="d-flex align-items-center">
        <i class="bi bi-person-circle fs-2 me-3 text-gradient"></i>
        <div>
          <h3 class="h5 mb-1 text-gradient"><%= user.name %></h3>
          <small class="text-white-50">Joined Music Hour <%= user.created_at.strftime("%Y-%m-%d") %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>